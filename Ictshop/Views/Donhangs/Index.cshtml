@model IEnumerable<Ictshop.Models.Donhang>

@{ ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<link rel="stylesheet" href="~/css/Style.css";

<h2>Danh sách đơn hàng</h2>
<section class="home" id="home">
    <div class="slide-container active">
        <div class="slide">
            <div class="image">
                <img src="~/HinhanhSP/banner124.jpg" class="shoe" alt="" />
                <img src="~/HinhanhSP/banner125.jpg" class="text" alt="" />
            </div>
        </div>
    </div>
</section>

<table class="table">
    <tr>
        <th>
            Họ tên
        </th>
        <th>
            Ngày đặt
        </th>
        <th>
            Tình trạng đơn hàng
        </th>
        <th>
            Thanh toán
        </th>
        <th>
            Địa chỉ nhận hàng
        </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nguoidung.Hoten)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Ngaydat)
    </td>
    <td>
        @{ if (@item.Tinhtrang == 0)
            {
                <h5 style="color:red">Đang chờ xác nhận. </h5> 
            }
                else if (@item.Tinhtrang == 1)
                {
                    <h5 style="color:green">Đã xác nhận </h5> 
                }
                else
                {
                 <h5 style="color:orangered">Đang chờ xác nhận </h5> 
                } 
         }
    </td>
    <td>
        @{ if (@item.Thanhtoan == 1)
            {
                <div style="color:red">Thanh toán tiền mặt</div>
            }
            else if (@item.Thanhtoan == 2)
            {
                <div style="color:brown">Thanh toán Momo</div>
            }
        }
  </td>
    <td>
        @Html.DisplayFor(modelItem => item.Diachinhanhang)
    </td>
    <td>
        <button class="btn-primary">
            @Html.ActionLink("Chi tiết", "Details", new { id = item.Madon }, new { @style = "color:white;" })
        </button>

    </td>
</tr>}

</table>
